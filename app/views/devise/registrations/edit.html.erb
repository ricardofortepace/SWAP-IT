  <div class="container-formularios-duplo-form">

    <div class="container-formularios-simples-3">
        <div class="form-swapit-2">
          <h1 class="title">edit user</h1>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.input :photo, :label => "new photo",as: :file %>
          <%= f.input :name,:label => "new name",
                      required: true,
                      autofocus: true,
                        input_html: { autocomplete: "name" }%>
          <%= f.input :password,:label => "new password",
                      placeholder: 'min of 6 characters',
                      required: false,
                      input_html: { autocomplete: "new password" } %>
        </div>

        <div class="form-swapit-2b">
          <%= f.input :range,:label => "range (km)", collection: 0..269,
                      required: true,
                      autofocus: true %>
          <%= f.input :address, :label => "new address",
                      input_html: { data: { geocoder_target: "address" }, class: "d-none", id: "search-item" },
                      wrapper_html: { data: { controller: "geocoder",
                      required: false, geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
          <%= f.input :current_password,:label => "current_password",
                      required: true,
                      input_html: { autocomplete: "current password" } %>
        </div>

      </div>
      <div class="container-botao">
        <%= f.button :submit, "save changes", class: "button-04"%>
        <% end %>
        <%= link_to "delete account?", registration_path(resource_name), class:"button-detail", data: { confirm: "are you sure?" }, method: :delete %>
    </div>
  </div>
